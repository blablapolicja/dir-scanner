{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build",
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "pretty": true,
    "removeComments": true
  },
  "exclude": [
    "./build",
    "./**/*.spec.ts"
  ]
}
